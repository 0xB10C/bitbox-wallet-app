{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "jsxFactory": "h",
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
}
